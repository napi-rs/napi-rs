{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "outDir": "dist",
    "allowJs": false
  },
  "include": ["./src"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
