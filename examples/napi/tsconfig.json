{
  "extends": "../tsconfig.json",
  "include": ["."],
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": false,
    "noEmit": true,
    "types": ["bun-types"],
    "importHelpers": false
  },
  "exclude": [
    "dist",
    "electron.js",
    "electron-renderer",
    "index.js",
    "index.wasi.mjs"
  ]
}
